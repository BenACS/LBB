{% extends 'base.html.twig' %}

{% block title %}Give us information{% endblock %}

{% block body %}
	<div class="col-lg-8 col-md-8 col-sm-9 col-10 mx-auto pt-3">
		<div class="d-flex flex-row justify-content-center my-5">
			<a href="{{ path('authentification') }}">
				<button class="myButton">Sign up</button>
			</a>
		</div>

		<div class="col-lg-12 mx-auto border borderSize">
			<h2 class="my-3 text-center">Sign In</h1>
			<form action="{{ path('security_login')}}" method="post">
				<div class="form-group">
					<i class="fas fa-envelope"></i>
						<label for="_username">Email</label>
					<input placeholder="Nainpossible@geek.com" required name="_username" type="text" class="form-control">
				</div>

				<div class="form-group">
					<i class="fas fa-asterisk"></i>
						<label for="_password">Password</label>
					<input placeholder="********" required name="_password" type="password" class="form-control">
				</div>

				<div class="form-check mb-2">
					<input class="form-check-input" type="checkbox" name="_remember_me" id="autoSizingCheck remember_me">
					<label for="remember_me" class="form-check-label" for="autoSizingCheck">Remember me</label>
				</div>

				<div class="form-group text-center">
					<a href="">Forgot your password ?</a>
					<div class="form-group text-center mt-2">
						<button type="submit" class="btn btn-success myButton2 mb-3">Sign In</button>
						<div class="g-signin2" data-onsuccess="onSignIn"></div>
					</div>
				</div>
			</form>
		</div>
	</div>
	{% block javascripts %}
		<script src="https://apis.google.com/js/platform.js" async defer></script>
	{% endblock %}
{% endblock %}