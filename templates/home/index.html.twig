                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Third slide -->
                    <div class="carousel-item">
                        <div class="row justify-content-around">
                            {% for i in 6..7 %}
                            <div class="col-4  text-center">                                 
                                <div class='text-center border p-2' style='height:85%'>
                                    <img src="{{ articleImages[i] }}" alt="Card image cap" width="100%">
                                    <h4 >{{ products[i].title }}</h4>
                                </div>                               
                                <a class="btn btn-primary mt-2" href="{{ path('product', {id : products[i].id })}}">View</a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>             
              </div>

              <div class="mx-2">
                  <a class="btn" href="#news" data-slide="next"><i class="fa fa-chevron-right fa-3x"></i></a>
