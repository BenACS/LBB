{% extends 'base.html.twig' %}

{% block title %}Les Bons Bool√©ens{% endblock %}

{% block body %}
<div class="container p-0 m-auto">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://i.ibb.co/9VMK4SF/carousel-1.png" alt="Los Angeles" style="width:100%;">
      </div>

      <div class="item">
        <img src="https://i.ibb.co/9VMK4SF/carousel-1.png" alt="Chicago" style="width:100%;">
      </div>
    
      <div class="item">
        <img src="https://i.ibb.co/9VMK4SF/carousel-1.png" alt="New york" style="width:100%;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<main role="main">

	<div class="album py-5 bg-light">
		<div class="container">

			{% for articleImage in articleImages %}
				<img src="{{ articleImage.url }}">
			{% endfor %}
		  
		</div>
	</div>

</main>
{% endblock %}
