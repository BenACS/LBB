{% extends 'base.html.twig' %}

{% block title %}Les Bons Bool√©ens{% endblock %}

{% block body %}
    <!-- Ads & other things carousel -->
    <div id="carouselExampleIndicators" class="carousel slide col-lg-8 offset-lg-2 pt-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://i.ibb.co/9ZgZ0cN/carousel-2.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://i.ibb.co/sVMDfv9/carousel-3.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://i.ibb.co/9VMK4SF/carousel-1.png" alt="Third slide">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Best sellers carousel -->
    <div class="container my-4">
        <hr class="my-4">

        <!-- Wrapper -->
        <div id="hots" class="carousel slide carousel-multi-item" data-interval="false">
            <div class="d-flex flex-row align-items-center">
                <div class="mx-2">
                    <a class="btn" href="#hots" data-slide="prev"><i class="fa fa-chevron-left fa-3x"></i></a>
                </div>

                <!-- Slides -->
                <div class="carousel-inner" role="listbox">

                    <!-- First slide -->
                    <div class="carousel-item active">
                        <div class="row justify-content-around">
                            {% for i in 0..2 %}
                                <div class="col-4  text-center">                                 
                                    <div class='text-center border p-2' style='height:85%'>
                                        <img src="{{ articleImages[i] }}" alt="Card image cap" width="100%">
                                        <h4 class="pb-1">{{ products[i].title }}</h4>
                                    </div>                               
                                    <a class="btn btn-primary mt-2" href="{{ path('product', {id : products[i].id })}}">View</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Second slide -->
                    <div class="carousel-item">
                        <div class="row justify-content-around">
                            {% for i in 3..5 %}
                            <div class="col-4  text-center">                                 
                                <div class='text-center border p-2' style='height:85%'>
                                    <img src="{{ articleImages[i] }}" alt="Card image cap" width="100%">
                                    <h4 >{{ products[i].title }}</h4>
                                </div>                               
                                <a class="btn btn-primary mt-2" href="{{ path('product', {id : products[i].id })}}">View</a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Third slide -->
                    <div class="carousel-item">
                        <div class="row justify-content-around">
                            {% for i in 6..7 %}
                            <div class="col-4  text-center">                                 
                                <div class='text-center border p-2' style='height:85%'>
                                    <img src="{{ articleImages[i] }}" alt="Card image cap" width="100%">
                                    <h4 >{{ products[i].title }}</h4>
                                </div>                               
                                <a class="btn btn-primary mt-2" href="{{ path('product', {id : products[i].id })}}">View</a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
              </div>

              <div class="mx-2">
                  <a class="btn" href="#hots" data-slide="next"><i class="fa fa-chevron-right fa-3x"></i></a>
              </div>
            </div>
        </div>
    </div>

    <!-- New products carousel -->
    <div class="container my-4">
        <hr class="my-4">

        <!--Wrapper-->
        <div id="news" class="carousel slide carousel-multi-item" data-interval="false">
            <div class="d-flex flex-row align-items-center">
                <div class="mx-2">
                    <a class="btn" href="#news" data-slide="prev"><i class="fa fa-chevron-left fa-3x"></i></a>
                </div>

                <!--Slides-->
                <div class="carousel-inner" role="listbox">

                <!--First slide-->
                    <div class="carousel-item active">
                        <div class="row justify-content-around">
