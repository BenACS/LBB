<!DOCTYPE html>
<html>
{% block head %}
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css"
			integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
		<meta name="google-signin-client_id"
			content="592932938646-v8c874ffig14j97e8ukktsvfmqradul6.apps.googleusercontent.com">
		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}
		<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
			integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
	</head>
{% endblock %}

<body style="overflow-x: hidden; overflow-y:auto;">
	<header class="position-fixed w-100" style="z-index:80">
		<nav class="navbar navbar-expand-sm navbar-dark flex-column p-0" style="background-color: #FFFFFF">
			<div class="col-12 p-0">
				<div class="row justify-content-between align-items-center flex-lg-nowrap">

					<div class="row col-12 col-sm-9 col-lg-10 justify-content-between px-3 px-sm-0">
						<!-- Logo -->
						<div class="col-lg-1 col-sm-4 col-2 my-1 pl-sm-5">
							<a class="navbar-brand" href="{{ path('home') }}">
								<img src="https://i.ibb.co/RH1hSsx/Logoblack.png" alt="logo" width="40px">
							</a>
						</div>

						<!-- Search bar -->
						<div class="col-lg-9 col-sm-8 col-10 justify-content-center pt-sm-2">
							<form class="col-lg-12 form-inline d-flex justify-content-center flex-nowrap"
								autocomplete="off" method="post" action="{{ path('searchTag') }}">
								<div class="autocomplete col-lg-9 col-sm-12 col-11">
									<input class=" form-control mr-sm-2" id="searchTag" type="text" placeholder="Search"
										style="width:100%;border-color: #1C6EA4" name="tag">
								</div>
								<button class="col-lg-2 col-sm-4 col-4 btn my-2 my-sm-0" type="submit" id="btnSearch">Search</button>
							</form>
						</div>
					</div>

					<div id="js-tagNames" style="display:block" data-tag-names='{{ header.tagNames }}'></div>

					<div class="row col-12 col-sm-3 col-lg-3 p-sm-0">
						<!-- Buttons -->
						<div class="col-lg-9 col-sm-12 col-12 d-flex justify-content-sm-end justify-content-center" id="navbarColor02">
							<ul class="navbar-nav d-flex flex-row justify-content-between col-10">
								{% if app.user %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('logout') }}">
											<i class="fas fa-power-off" style="color:Red;"></i>
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('profile') }}">
											<i class="fas fa-user-plus" style="color:#1C6EA4;"></i>
										</a>
									</li>
								{% else %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('security_login') }}">
											<i class="fas fa-user-alt" style="color:#1C6EA4;"></i>
										</a>
									</li>
								{% endif %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('cart') }}">
										<i class="fas fa-shopping-cart" style="color:#1C6EA4;"></i>
										<span class="badge badge-pill badge-primary" id="cart_badge">{{header.cartInt}}</span>
									</a>
								</li>
								<li class="nav-item"> <!-- Toggler -->
									<button class="navbar-toggler p-1 text-dark border border-dark" type="button" data-toggle="collapse" data-target="#nav_mainCat" data-toggle="collapse" aria-controls="nav_mainCat" aria-expanded="false" aria-label="Toggle navigation">
										<i class="fas fa-bars"></i>
									</button>
								</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Categories -->
				<!-- class="collapse navbar-collapse" -->
				<div id="nav_mainCat">
				
					<!-- Main categories -->
					<div class="row mainCategories text-center">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
							{% if category.parentId == 0 and category.Id != 4 %}
							<li class="nav-item categories">
								<a class="nav-link blackButton"
									href="{{ path('category', {category: category.categoryName})}}">{{ category.categoryName }}</a>
							</li>
							{% elseif category.parentId == 0 and category.Id == 4 %}
							<li class="nav-item categories ">
								<a class="nav-link blackButton"
									href="{{ path('surprises')}}">{{ category.categoryName }}</a>
							</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>

					<!-- Subcategories -->
					<div class="row disNone subCategories text-center">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
							{% if category.parentId == 1 %}
							<li class="nav-item">
								<a class="nav-link"
									href="{{ path('subcategories', {category: header.mainCatName(category.parentId), subcategories: category.categoryName})}}">{{ category.categoryName }}</a>
							</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>

					<div class="row disNone subCategories text-center">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
							{% if category.parentId == 2 %}
							<li class="nav-item">
								<a class="nav-link"
									href="{{ path('subcategories', {category: header.mainCatName(category.parentId), subcategories: category.categoryName})}}">{{ category.categoryName }}</a>
							</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>

					<div class="row disNone subCategories text-center">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
							{% if category.parentId == 3 %}
							<li class="nav-item">
								<a class="nav-link"
									href="{{ path('subcategories', {category: header.mainCatName(category.parentId), subcategories: category.categoryName})}}">{{ category.categoryName }}</a>
							</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>

					<div class="row disNone subCategories text-center exception">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
							{% if category.parentId == 4 %}
							<li class="nav-item">
								<a class="nav-link"
									href="{{ path('subcategories', {category: header.mainCatName(category.parentId), subcategories: category.categoryName})}}">{{ category.categoryName }}</a>
							</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>

					<div class="row disNone subCategories text-center">
						<ul class="navbar-nav col-12 justify-content-around">
							{% for category in header.categories %}
								{% if category.parentId == 17 %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('subcategories', {category: header.mainCatName(category.parentId), subcategories: category.categoryName})}}">{{ category.categoryName }}</a>
									</li>
								{% endif %}
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</nav>

		<!-- TOAST -->
		<div class="col-3 float-right" aria-live="polite" aria-atomic="true" style="position: relative;">
			<!-- Position it -->
			<div class="col-12 d-flex flex-column align-items-end" style="position: absolute;" id="toast_box"></div>
		</div>
		<!-- END TOAST -->
	</header>


	<main>
		{% block body %}{% endblock %}
	</main>

	<footer id="myfooter" class="page-footer font-small blue pt-2 border-top">
		<!-- Contact us -->
		<div class="text-center">
			<a href="{{ path('contact') }}" style="color: black">Contact us</a>
		</div>

		<!-- Terms of use etc -->
		<div class="d-flex justify-content-center">
			<ul class="list-unstyled d-flex justify-content-between" style="font-size: 14px;">
				<li class="mx-1">
					<a href="#" style="color: black">Terms of use |</a>
				</li>
				<li class="mx-1">
					<a href="#" style="color: black">Conditions of sale |</a>
				</li>
				<li>
					<a href="#" style="color: black">Legal notice</a>
				</li>
			</ul>
		</div>

		<!-- Copyright -->
		<div class="footer-copyright text-center pt-2 pb-2 border-top" style="background-color: rgb(200,200,200);">
			<span class="font-weight-bold">
				©
				<span style="color: gray">Copyright</span>
			</span>
			<a href="#">
				LBB "Les Bons Booléens"</a>
		</div>
	</footer>
	{{ encore_entry_script_tags('app') }}
	{% block javascripts %}{% endblock %}
</body>

</html>