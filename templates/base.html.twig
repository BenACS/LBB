<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
           <nav class="navbar navbar-expand-sm navbar-dark bg-dark flex-column">
                <div class="col-12">
                    <div class="row justify-content-between">
                        <!-- Logo -->
                        <div class="col-lg-2 col-sm-2">
                            <a class="navbar-brand" href="#">LBB</a>
                        </div>

                        <!-- Search bar -->
                        <div class="col-lg-8 col-sm-8 justify-content-center">
                            <form class="col-lg-12 form-inline my-2 my-lg-0 d-flex justify-content-center">
                                <input class="col-lg-6 col-sm-9 form-control mr-sm-2" type="text" placeholder="Search">
                                <button class="col-lg-2 col-sm-2 btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>

                        <!-- Buttons -->
                        <div class="col-lg-2 col-sm-2 collapse navbar-collapse justify-content-end" id="navbarColor02">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cart</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="row">
                        <ul class="navbar-nav col-12 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Clothing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Accessories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Mugs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Surprises</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer class="page-footer font-small blue pt-2 border-top">
            <!-- Contact us -->
            <div class="text-center">
                <a href="#" style="color: black">Contact us</a>
            </div>

            <!-- Terms of use etc -->
            <div class="d-flex justify-content-center">
                <ul class="list-unstyled d-flex justify-content-between">
                    <li><a href="#" style="color: black">Terms of use</a></li>
                    <li><a href="#" style="color: black">Conditions of sale</a></li>
                    <li><a href="#" style="color: black">Legal notice</a></li>
                </ul>
            </div>

            <!-- Copyright -->
            <div class="footer-copyright text-center pt-2 pb-2 border-top" style="background-color: rgb(200,200,200);">
                <span class="font-weight-bold">
                    © <span style="color: gray">Copyright</span>
                </span>
                <a href="#"> LBB "Les Bons Booléens"</a>
            </div>
        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
