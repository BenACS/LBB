{% extends 'base.html.twig' %}

{% block title %}Command History{% endblock %}

{% block body %}

<div class="container-fluid">
		<div class="row justify-content-center align-items-baseline m-2">
			<h1 class="mx-2">Command History</h1>
		</div>

		<div class="row justify-content-center">
        {% for order in orders %}
			<div class="col-xl-6 col-sm-5 col-8">
                <div class="item-box row col-10 my-1 p-2 border rounded">
                    <div class="col-10 px-3">
                        <div class="row">
                            <div class="col-8">
                            {% for cartItem in order.carts %}
                                {{ cartItem.article }}
                                {# {{ order.carts[0].quantity }} #}
                                <img width="45%" src="{{ order.carts[0].article.images[0].url }}">
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
			</div>

			<div class="col-4">
				<div class="border rounded mt-2 py-3 px-2">
					<div class="d-flex justify-content-between my-1">
						<div>
							<b>Command number :</b></div>
						<div>{{ order.orderNumber }}</div>
					</div>
					<div class="d-flex justify-content-between my-1">
						<div>
							<b>Command date :
							</b>
						</div>
						<div class="text-success">
							{{ order.validationDate | date("Y/m/d")}}</div>
					</div>
					<div class="d-flex justify-content-between my-1">
						<div>
							<b>Command Value :
							</b>
						</div>
						<div>
							<span id="js_totalPriceVAT">{{ order.totalValue }}</span> â‚¬</div>
					</div>
                    <div class="d-flex justify-content-between my-1">
						<div>
							<b>Payment method :
							</b>
						</div>
						<div>{{ order.payment }}</div>
					</div>
				</div>
                {% endfor %}
			</div>
		</div>
	</div>

{% endblock %}
{% block javascripts %}
{% endblock %}