{% extends 'base.html.twig' %}

{% block title %}Profile Page
{% endblock %}

{% block body %}

	<div class="col-lg-8 col-md-9 col-sm-10 col-11 mx-auto">
		<div class="pt-3">
			<div class="text-center">
				<h2 class="mt-1">Add an adress to your profile</h2>
			</div>

			{{ form_start(form)}}

			<div id="stepOne">
				{{ form_row(form.country, { 'label':'Country','attr': {'placeholder': 'Country'}})}}
				{{ form_row(form.city , { 'label':'City','attr': {'placeholder': 'City'}})}}
				{{ form_row(form.zip , { 'label':'ZipCode','attr': {'placeholder': 'Zip Code'}})}}
				{{ form_row(form.address, { 'label':'Adress','attr': {'placeholder': 'Adress'}})}}
				{{ form_row(form.optionalInfo, { 'label':'Optional informations','attr': {'placeholder': ''}})}}
				{{ form_row(form.defaultAdress, { 'label':'Default adress ?'})}}

				<div class="text-center">
					<button type="submit" class="btn btn-success">Validate</button>
				</div>
			</div>
		</div>
	</div>

	{{ form_end(form)}}
{% endblock %}
