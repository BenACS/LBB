{% extends 'base.html.twig' %}

{% block title %}Profile Page
{% endblock %}

{% block body %}
	<div class="col-lg-6 col-md-6 col-sm-8 col-10 mx-auto ">
		<div class="pt-3">

			<div class="text-center">
				<h2 class="mt-1">Edit your profile</h2>
			</div>

			<div class="form-group">
				<label>Firstname</label>
				<input class="form-control" type="text" placeholder="{{ user.firstname }}" value="{{ user.firstname }}" readonly>
			</div>
			<div class="form-group">
				<label>Lastname</label>
				<input class="form-control" type="text" placeholder="{{ user.lastname }}" value="{{ user.lastname }}" readonly>
			</div>
			<div class="form-group">
				<label>Birthdate</label>
				<input class="form-control" type="text" value="{{ user.birthdate | date("Y/m/d") }}" readonly>
			</div>

			<form method="post" action="{{ path('editProfile') }}">
				<div class="form-group">
					<label>Email</label>
					<input type="email" class="form-control" value="{{ user.email }}" name="userEmail">
				</div>
				<div class="form-check">
					{% if user.newsletter == false %}
						<input class="form-check-input" type="checkbox" id="checkProfil" name="userNewsletter">
						<label for="checkProfil">Newsletter</label>
					{% else %}
						<input class="form-check-input" type="checkbox" id="checkProfil" name="userNewsletter" checked="checked">
						<label for="checkProfil">Newsletter</label>
					{% endif %}
				</div>
				<div class="text-center">
					<button type="submit" class="btn btn-success">Confirm</button>
				</div>
			</form>

			<div class="text-center">
				<a href="{{ path('editPassword') }}">Change your password</a>
				<br>
				<a href="{{ path('adresses') }}">Manage your addresses</a>
				<br>
				<a href="{{ path('commandHistory') }}">Command history</a>
			</div>
		</div>
	</div>
{% endblock %}
