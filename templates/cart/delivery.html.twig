{% extends 'baseCart.html.twig' %}

{% block title %}Delivery
{% endblock %}

{% block body %}

	<div class="col-lg-4 col-md-4 col-sm-5 col-4 mx-auto">
		<div class="col-lg-12 mx-auto border borderSize">
			<h2 class="my-3 text-center">Delivery Options</h1>
			<form action="{{ path('cart_confirm')}}" method="post" id="formD1">
				<div class="text-center">
					<div>
						<input type="radio" id="huey" name="deliveryChoice" value="5.99" required>
						<label for="huey">One Day Delivery</label>
						<label for="huey">5.99€</label>
					</div>
					<div>
						<input type="radio" id="dewey" name="deliveryChoice" value="3.99">
						<label for="dewey">2 Days delivery</label>
						<label for="huey">3.99€</label>
					</div>
					<div>
						<input type="radio" id="louie" name="deliveryChoice" value="0">
						<label for="louie">4 + Days delivery</label>
						<label for="huey">Free</label>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="d-flex flex-row justify-content-center mt-5">
		<div class="col-lg-4 col-md-4 col-sm-5">
			<div class="border borderSize ">
				<h2 class="my-3 text-center">Delivery Adress</h1>
				<form action="{{ path('cart_confirm')}}" method="post" id="formD2">
					<div class="text-center">
						<span>Default Adress</span>
					</div>
				</form>
			</div>
		</div>

		<div class="col-lg-4 col-md-4 col-sm-5">
			<div class="border borderSize ">
				<h2 class="my-3 d-inline">Billing Adress</h1>
				<div class="d-inline">
					<input type="checkbox" id="scales" name="scales">
					<label for="scales">Different Adress</label>
				</div>
				<form action="{{ path('cart_confirm')}}" method="post" id="formD3">
					<div class="text-center">
						<div>
							<span>Default Adress</span>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="d-flex flex-row justify-content-center mt-5">
		<button type='submit' class="btn btn-primary" onclick="submitForms()">Confirm</button>
	</div>

{% endblock %}
{% block javascripts %}
	<script>
		submitForms = function () {
document.getElementById("formD1").submit();
}
	</script>

{% endblock %}
