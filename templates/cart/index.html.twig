{% extends 'baseCart.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-baseline m-2">
            <h1 class="mx-2">Cart</h1>
            <span>(<span id="js_nbr_items">{{ itemsInCart }}</span> products)</span>
        </div>
        <!-- TEST BUTTON TO REMOVE LATER -->
            <a href="{{path('cart_show')}}" id="show_cart">Show</a>
        <!-- END OF TEST BUTTON -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-8 justify-content-center" id="js_items_list">
                <form action="{{path('cart_modify')}}" method="POST" id="quantity_form"></form>
                    <!-- start loop articlesInCart -->
                    {% for item in cart %}
                        <div class="item-box row col-10 my-1 p-2 border rounded" id="item_{{item.article.id}}">
                            <img src="{{item.article.articleImages.0.url}}" width="80px" height="80px">
                            <div class="col-10 px-3">
                                <div class="row justify-content-between">
                                    <div class="col-9 article-title"><b>{{item.article.articleTitle}}</b></div>
                                    <div><span class="article-price">{{item.article.product.price.priceDF}}</span> €</div>
                                </div>
                                <div class="mt-1 mb-3">{{ item.article.stockMessage | raw }}</div>
                                <div class="row justify-content-between">
                                    <div class="col-8">
                                        <small class="form-row align-items-baseline">
                                            <label class="mx-1">Quantity</label>
                                            <select class="js-quantity-selector form-control col-2" data-article-id="{{item.article.id}}">
                                                <!-- start on loop article stock with twig -->
                                                {% if item.article.stock < 5 %}
                                                    {% for q in 1..item.article.stock %}
                                                        <option {% if item.quantity == q %} selected {% endif %}>{{q}}</option>
                                                    {% endfor %}.
                                                {% else %}
                                                    {% for q in 1..5 %}
                                                        <option {% if item.quantity == q %} selected {% endif %}>{{q}}</option>
                                                    {% endfor %}
                                                {% endif %}
                                                <!-- end on loop article stock with twig -->
                                            </select>
                                        </small>
                                    </div>
                                    <a href="{{path('cart_remove')}}" data-article-id="{{item.article.id}}" class="js-btn-delete"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div>No registered items in the cart</div>
                    {% endfor %}
                    <!-- end loop articlesInCart -->
                </form>
            </div>

            <div class="col-xl-3 col-4">
                <div class="form-group d-flex border rounded p-2 my-1">
                    <label class="col-auto col-form-label">Promo : </label>
                    <div class="col-6 p-0">
                      <input type="text" class="form-control" placeholder="ex: LBB527">
                    </div>
                  </div>
                  <div class="border rounded my-2 px-2">
                      <div class="d-flex justify-content-between my-1">
                          <div><b>Total excl.taxes : </b></div>
                          <div><span id="js_totalPriceDF"></span>€</div>
                      </div>
                      <div class="d-flex justify-content-between my-1">
                        <div><b>Discount : </b></div>
                        <div class="text-success"><span id="js_discount">5.00</span>€</div>
                    </div>
                    <div class="d-flex justify-content-between my-1">
                        <div><b>Total incl.taxes : </b></div>
                        <div><span id="js_totalPriceVAT">59.98</span>€</div>
                    </div>
                  </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    {{ encore_entry_script_tags('cart') }}
{% endblock %}


